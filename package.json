{
  "name": "claude-hive",
  "version": "0.1.0",
  "description": "Open-source 3D visualization for Claude Code - monitor multiple agents with a hexagonal grid interface",
  "type": "module",
  "bin": {
    "claude-hive": "./cli/index.js"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node server/index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "setup": "node cli/setup.js",
    "doctor": "node cli/doctor.js"
  },
  "keywords": [
    "claude-code",
    "visualization",
    "monitoring",
    "ai-agents",
    "threejs",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ws": "^8.16.0",
    "express": "^4.18.2",
    "chalk": "^5.3.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
